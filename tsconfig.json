{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "DOM"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "./dist/types",
    "declarationMap": true,
    "types": [
      "node",
    ],
    "paths": {
      "~nuxtgraphqlmiddleware/*": ["src/runtime/*"],
      "~nuxtgraphqlmiddleware": ["src/runtime"]
    }
  },
  "include": [
    "./src"
  ],
  "exclude": ["dist","node_modules"]
}
