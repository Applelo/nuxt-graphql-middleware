{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["DOM"],
    "esModuleInterop": true,
    "strict": false,
    "declaration": true,
    "declarationDir": "./dist/types",
    "declarationMap": true,
    "removeComments": true,
    "types": ["node"],
    "outDir": "dist/esm"
  },
  "include": ["./src"],
  "exclude": ["dist", "node_modules"]
}
